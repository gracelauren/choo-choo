<div class = 'container'>
<h1>Update the <%=@line.name() %> Line </h1>

<form action="/lines/<%= @line.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename your Line:</label>
  <input id="name" name="name" type="text">

  <button class="button" type="submit">Update</button>
</form>

<br>
<br>


<form action="/lines/<%= @line.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <div class="span7 text-center">
    <button  class="button btn-danger" type="submit">Delete Line</button>
  </div>
</form>
</div>

<div class="span7 text-center">
  <a href="/line/<%= @line.id() %>"><button class="button button-back center btn">Return to the <%=@line.name() %> Line</a>
  </div>
</div>
