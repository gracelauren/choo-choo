<div class = 'container'>
<h1 class="warning">Update the <%=@line.name() %> Line </h1>

<form action="/lines/<%= @line.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Rename your Line:</label>
  <br>
  <input id="name" name="name" type="text">
  <br>
  <button class="button warning" type="submit">Rename</button>
</form>

<br>
<br>


<form action="/lines/<%= @line.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <div class="span7 text-center">
    <button  class="button warning" type="submit">Delete Line</button>
  </div>
</form>
</div>

<div class="span7 text-center">
  <p class="return"><a href="/line/<%= @line.id() %>">Return to the <%=@line.name() %> Line</a></p>
  </div>
</div>
