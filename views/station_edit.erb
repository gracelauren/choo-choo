<div class = 'container'>
  <h1 class="warning">Update the <%=@station.name() %> Station </h1>

  <form action="/stations/<%= @station.id() %>" method="post" class="update">
    <input name="_method" type="hidden" value="patch">
    <label for="name">Rename your Station:</label>
    <br>
    <input id="name" name="name" type="text">
    <br>
    <button class="button warning" type="submit">Rename</button>
  </form>

  <br>
  <br>

  <form action="/stations/<%= @station.id() %>" method="post">
    <input name="_method" type="hidden" value="delete">
    <div class="span7 text-center">
      <button  class="button warning" type="submit">Delete Station</button>
    </div>
  </form>
</div>

<div class="span7 text-center">
  <p class="return"><a href="/station/<%= @station.id() %>">Return to the <%=@station.name() %> Station</a></p>
  </div>
</div>
