<div class = 'container'>
  <h1>Update the <%=@station.name() %> Station </h1>

  <form action="/stations/<%= @station.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">

    <label for="name">Rename your Station:</label>
    <input id="name" name="name" type="text">

    <button class="button" type="submit">Update</button>
  </form>

  <br>
  <br>

  <form action="/stations/<%= @station.id() %>" method="post">
    <input name="_method" type="hidden" value="delete">
    <div class="span7 text-center">
      <button  class="button btn-danger" type="submit">Delete Station</button>
    </div>
  </form>
</div>

<div class="span7 text-center">
  <a href="/station/<%= @station.id() %>"><button class="button button-back center btn">Return to the <%=@station.name() %> Station</a>
  </div>
</div>
